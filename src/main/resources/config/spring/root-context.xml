	<!-- 어노테이션 설정을 가능하도록 하겠다는 의미 -->
	<context:annotation-config />

	<!-- 데이터 베이스 설정파일 내용 읽어오기 -->
	<import resource="database-context.xml"/>

	<!-- 스케줄 xml 설정은 거지같음. 어노테이션을 쓰자~! -->

</beans>
